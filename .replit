modules = ["web", "nodejs-20", "php-8.2", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Server"

[[workflows.workflow]]
name = "Laravel Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start-server.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35401
externalPort = 3000

[[ports]]
localPort = 45993
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["php", "-S", "0.0.0.0:8080", "-t", "public"]
